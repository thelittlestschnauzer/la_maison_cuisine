
<%= form_with(model: @category, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group" data-uppy="category[image]">
    <%= form.label :image %>
    <div>
      <% if @category.image.attached? %>
        <%= image_tag @category.image, width: 300, data: { behavior: 'uppy-preview' } %>
      <% else %>
        <img src="" alt data-behavior="uppy-preview" />
      <% end %>
    </div>

    <%= link_to "Upload", "#", data: { behavior: "uppy-trigger" } %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>

<% end %>


